{

    "manifest_version": 2,
    "name": "d-anime-sync",
    "version": "1.0",

    "description": "dアニメストアで同時視聴",

    "icons": {
        "48": "icon.png"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["main.js"]
    }],

    "permissions": [
        "storage"
    ],

    "browser_action": {
        "browser_style": false,
        "default_icon": "icon.png",
        "default_title": "d-anime-sync",
        "default_popup": "popup/popup.html"
    }

}